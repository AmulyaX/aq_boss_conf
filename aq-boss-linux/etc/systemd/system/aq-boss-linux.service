[Unit]
Description=AQ Boss Linux Updater
After=network-online.target systemd-user-sessions.service time-sync.target systemd-udev-settle.service
Wants=network-online.target time-sync.target systemd-udev-settle.service

[Service]
Type=idle
ExecStart=/opt/aq-boss-linux/updater/aq-boss-linux.py
Restart=always
RestartSec=30
User=root
WorkingDirectory=/opt/aq-boss-linux/updater

[Install]
WantedBy=multi-user.target
