#!/bin/bash
set -e

ACTION="$1"
echo "[AQ Boss Linux] Pre-install script running (action: $ACTION)"

# For upgrades, no special handling is needed.
if [ "$ACTION" = "upgrade" ]; then
    echo "Upgrade detected â€” skipping pre-install cleanup."
    exit 0
fi

# For fresh installs, you might want to prepare paths
if [ "$ACTION" = "install" ]; then
    echo "Preparing directories..."
    mkdir -p /opt/boss-local/updater || true
fi

exit 0
